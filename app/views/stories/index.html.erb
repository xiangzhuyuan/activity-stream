<% page_header t('slogan') %>

<p><%= link_to t('story.create'), new_story_path, class: 'btn btn-primary btn-large' %></p>

<% @stories.each do |story| %>
    <div class="well well-lg">
      <h2><%= link_to story.title, story_path(story) %></h2>

      <p><%= truncate(story.body, length: 350) %></p>

      <div class="btn-group">
        <%= link_to t('story.edit'), edit_story_path(story), class: 'btn btn-info' %>
        <%= link_to t('story.destroy'), story_path(story), data: {confirm: t('story.sure')}, method: :delete, class: 'btn btn-danger' %>
      </div>
    </div>
<% end %>