<% page_header @story.title %>

<p>
  <span class="label label-default"><%= @story.likes || 0 %> <%=t('story.likes') %></span>
  <%= link_to content_tag(:span, '', class: 'glyphicon glyphicon-thumbs-up') +  t('like'),
              like_story_path(@story), class: 'btn btn-default btn-sm', method: :post %>
</p>

<p><%= @story.body %></p>

<div class="btn-group">
  <%= link_to t('story.edit'), edit_story_path(@story), class: 'btn btn-info' %>
  <%= link_to t('story.destroy'), story_path(@story), data: {confirm: t('story.sure')}, method: :delete, class: 'btn btn-danger' %>
</div>